<h1>Мои заказы</h1>

{{#if orders.length}}
    {{#each orders}}
      <div class="row">
          <div class="col l6 offset-l3 m8 offset-m2 s12 ">
              <div class="card">
                  <div class="card-content">
                      <span class="card-title">
                          Заказ <small>{{_id}}</small>
                      </span>
                      <p class="date">{{date}}</p>
                      <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

                      <ol>
                          {{#each courses}}
                          <li>
                              {{course.title}} (х<strong> {{count}}</strong>)
                          </li>
                          {{/each}}
                      </ol>
                      <hr>
                      <p>Цена: <span class="price">{{price}}</span></p>
                  </div>
              </div>
          </div>
          
      </div>

    {{/each}}
{{else}}
<p>Заказов пока нет</p>
{{/if}}